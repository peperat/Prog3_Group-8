<!-- Script to show/hide notes based on menu selection -->
<script>
    $(document).ready(function () {
        $('.dropdown-item').click(function () {
            var target = $(this).attr('href');
            $('.container div').hide();
            $(target).show();
            // Hide navigation bar
            $('.navbar').hide();
        });

        // Return button functionality
        $('.btn-primary').click(function () {
            $('.container div').hide();
            // Show navigation bar
            $('.navbar').show();
        });

        // Calculator button functionality
        $('#calculateBtn').click(function () {
            var feeInput = parseFloat(document.getElementById('feeInput').value);
            var currency = document.querySelector('input[name="currency"]:checked').value;
            var result;

            // Calculate based on currency
            switch (currency) {
                case 'SGD':
                    result = feeInput * 1; // 1 SGD = 1 SGD
                    break;
                case 'MYR':
                    result = feeInput * 3.06; // 1 SGD = 3.06 MYR (example conversion rate)
                    break;
                case 'MMK':
                    result = feeInput * 498.34; // 1 SGD = 498.34 MMK (example conversion rate)
                    break;
                case 'CNY':
                    result = feeInput * 4.88; // 1 SGD = 4.88 CNY (example conversion rate)
                    break;
                default:
                    result = 'Invalid currency';
            }

            // Display result
            document.getElementById('result').innerText = result + ' ' + currency;
        });
    });
</script>

<!-- Script to update the clock -->
<script>
    // Function to update the clock
    function updateClock() {
        var now = new Date();
        var hours = now.getHours();
        var minutes = now.getMinutes();
        var seconds = now.getSeconds();

        // Pad single digit minutes and seconds with leading zeros
        minutes = minutes < 10 ? '0' + minutes : minutes;
        seconds = seconds < 10 ? '0' + seconds : seconds;

        // Update the clock display
        document.getElementById('clock').innerText = hours + ':' + minutes + ':' + seconds;

        // Update the clock every second
        setTimeout(updateClock, 1000);
    }

    // Initial call to update the clock
    updateClock();
</script>

